{
    "cSpell.enableFiletypes": [
        "shellscript",
        "toml",
    ],
    "cSpell.words": [
        "addopts",
        "confusables",
        "docstrings",
        "ENOATTR",
        "ENOENT",
        "ENOTSUP",
        "ERANGE",
        "froms",
        "getxattr",
        "libc",
        "mypy",
        "pytest",
        "typeshed",
        "xattr"
    ],
    "editor.rulers": [
        90
    ],
    "editor.unicodeHighlight.allowedCharacters": {
        "â€™": true
    },
    "files.exclude": {
        "**/__pycache__": true,
        ".mypy_cache": true,
        ".pytest_cache": true,
        ".ruff_cache": true,
        "coverage": true,
        ".coverage": true
    },
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "terminal.integrated.env.osx": {
        "PATH": "${env:PATH}:scripts/",
    },
    "python.analysis.extraPaths": [
        "./source"
    ]
}
